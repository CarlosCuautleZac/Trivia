<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TriviaAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TriviaAPP"
    xmlns:views="clr-namespace:TriviaAPP.Views"
    Shell.FlyoutBehavior="Disabled">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    <ShellContent Route="Main">
        <views:Inicio></views:Inicio>
    </ShellContent>

    <ShellContent Route="Juego">
        <views:JuegoView></views:JuegoView>
    </ShellContent>

    <ShellContent Route="FinDeJuego">
        <views:FindDeJuego></views:FindDeJuego>
    </ShellContent>
</Shell>
