<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TriviaAPP.Models"
             xmlns:vm="clr-namespace:TriviaAPP.ViewModels" x:DataType="vm:TriviaViewModel"
             x:Class="TriviaAPP.Views.JuegoView"
             Title="JuegoView" Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Label>Tiempo Restante</Label>
        <Label Text="{Binding TiempoRestante}"></Label>

        <Label Text="Ronda"></Label>
        <Label Text="{Binding Ronda}"></Label>

        <Label Text="{Binding Pregunta.Pregunta}"></Label>

        <CollectionView ItemsSource="{Binding Pregunta.Respuestas}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button x:DataType="models:Respuesta" Text="{Binding Titulo}"></Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>